<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view my profile"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view another profile"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/postExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="view example post"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/createPostButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="create a post"
            android:layout_gravity="center_horizontal"/>


        <Button
            android:id="@+id/tagViewExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="click into tag"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/boardViewExampleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="view example bard"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>