import java.util.ArrayList;
import java.util.List;

public class Board {
    private String name;
    private List<String> tags;
    private List<String> moderators;

    public Board(String name) {
        this.name = name;
        this.tags = new ArrayList<>();
        this.moderators = new ArrayList<>();
    }

    // Method to add a tag to the board
    public void addTag(String tag) {
        tags.add(tag);
    }

    // Method to remove a tag from the board
    public void removeTag(String tag) {
        tags.remove(tag);
    }

    // Method to add a moderator to the board
    public void addModerator(String moderator) {
        moderators.add(moderator);
    }

    // Method to remove a moderator from the board
    public void removeModerator(String moderator) {
        moderators.remove(moderator);
    }

    // Getters and setters
    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public List<String> getTags() {
        return tags;
    }

    public List<String> getModerators() {
        return moderators;
    }

    @Override
    public String toString() {
        return "Board{" +
                "name='" + name + '\'' +
                ", tags=" + tags +
                ", moderators=" + moderators +
                '}';
    }

    public static void main(String[] args) {
        // Example usage
        Board newBoard = new Board("Chess Club");
        newBoard.addTag("#chess");
        newBoard.addTag("#strategy");
        newBoard.addModerator("Alice");
        newBoard.addModerator("Bob");

        System.out.println("New Board Created:");
        System.out.println(newBoard);
    }
}
