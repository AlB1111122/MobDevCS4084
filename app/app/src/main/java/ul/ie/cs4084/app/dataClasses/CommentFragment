import java.util.ArrayList;
import java.util.List;

public class Comment {
    private int upvotes;
    private int downvotes;
    private String content;
    private String poster;

    public Comment(String content, String poster) {
        this.upvotes = 0;
        this.downvotes = 0;
        this.content = content;
        this.poster = poster;
    }

    // Method to upvote the comment
    public void upvote() {
        upvotes++;
    }

    // Method to downvote the comment
    public void downvote() {
        downvotes++;
    }

    // Getters and setters
    public int getUpvotes() {
        return upvotes;
    }

    public int getDownvotes() {
        return downvotes;
    }

    public String getContent() {
        return content;
    }

    public String getPoster() {
        return poster;
    }

    @Override
    public String toString() {
        return "Comment{" +
                "upvotes=" + upvotes +
                ", downvotes=" + downvotes +
                ", content='" + content + '\'' +
                ", poster='" + poster + '\'' +
                '}';
    }

    public static void main(String[] args) {
        // Example usage
        Comment comment = new Comment("This is a great post!", "Alice");
        comment.upvote();
        comment.upvote();
        comment.downvote();

        System.out.println("Comment:");
        System.out.println(comment);
    }
}

class Board {
    private String name;
    private List<Comment> comments;

    public Board(String name) {
        this.name = name;
        this.comments = new ArrayList<>();
    }

    // Method to add a comment to the board
    public void addComment(Comment comment) {
        comments.add(comment);
    }

    // Method to display all comments on the board
    public void displayComments() {
        System.out.println("Comments on Board '" + name + "':");
        for (Comment comment : comments) {
            System.out.println(comment);
        }
    }

    // Getters and setters
    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }
}

